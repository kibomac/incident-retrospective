<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Incident</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script defer src="/js/createIncident.js"></script> <!-- Link to the JavaScript file -->
</head>
<body>
    <%- include('../partials/header') %> <!-- Include the header partial -->

    <main>
        <div class="container">
            <h1>Create a New Incident</h1>
            <form action="/incidents/create" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="rootCause">Root Cause:</label>
                    <select id="rootCause" name="root_cause">
                        <option value="" disabled selected>Select a root cause</option>
                        <% rootCauses.forEach(cause => { %>
                            <option value="<%= cause %>"><%= cause %></option>
                        <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </main>
    <%- include('../partials/footer') %> <!-- Include the footer partial -->
</body>
</html>