<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incidents</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/header') %> <!-- Include the header partial -->

    <main>
        <div class="container">
            <h1>Incidents</h1>
            <a href="/incidents/create" class="btn btn-primary">Log New Incident</a> <!-- Link to Create Incident -->
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Root Cause</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% incidents.forEach(incident => { %>
                        <tr>
                            <td><%= incident.id %></td>
                            <td><%= incident.title %></td>
                            <td><%= incident.root_cause %></td>
                            <td><%= new Date(incident.createdAt).toLocaleDateString() %></td>
                            <td>
                                <a href="/incidents/view/<%= incident.id %>" class="btn btn-view">View</a> <!-- Link to View Incident -->
                                <a href="/incidents/edit/<%= incident.id %>" class="btn btn-edit">Edit</a> <!-- Link to Edit Incident -->
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>

    <%- include('partials/footer') %> <!-- Include the footer partial -->
</body>
</html>