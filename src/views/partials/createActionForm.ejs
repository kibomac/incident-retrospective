<h2>Create Action Item</h2>
<form action="/action-items/create" method="POST" class="form">
    <input type="hidden" name="incident_id" value="<%= incident ? incident.id : incident_id %>">
    <div class="form-group">
        <label for="action_item">Action Item:</label>
        <textarea id="action_item" name="action_item" placeholder="Enter action item description" required></textarea>
    </div>
    <div class="form-group">
        <label for="assigned_to">Assigned To:</label>
        <input type="text" id="assigned_to" name="assigned_to" placeholder="Enter assignee name">
    </div>
    <div class="form-group">
        <label for="due_date">Due Date:</label>
        <input type="date" id="due_date" name="due_date">
    </div>
    <div class="form-group">
        <label for="status">Status:</label>
        <select id="status" name="status" required>
            <% actionItemStatuses.forEach(status => { %>
                <option value="<%= status %>"><%= status %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create Action Item</button>
</form>
