<h2>Edit Action Item</h2>
<form action="/action-items/edit/<%= actionItem.id %>" method="POST" class="form">
    <input type="hidden" name="incident_id" value="<%= incident_id %>">
    <div class="form-group">
        <label for="action_item">Action Item:</label>
        <textarea id="action_item" name="action_item" placeholder="Enter action item description" required><%= actionItem ? actionItem.actionItem : '' %></textarea>
    </div>
    <div class="form-group">
        <label for="assigned_to">Assigned To:</label>
        <input type="text" id="assigned_to" name="assigned_to" placeholder="Enter assignee name" value="<%= actionItem ? actionItem.assignedTo : '' %>">
    </div>
    <div class="form-group">
        <label for="due_date">Due Date:</label>
        <input type="date" id="due_date" name="due_date" value="<%= actionItem && actionItem.dueDate ? actionItem.dueDate.toISOString().split('T')[0] : '' %>">
    </div>
    <div class="form-group">
        <label for="status">Status:</label>
        <select id="status" name="status" required>
            <% actionItemStatuses.forEach(status => { %>
                <option value="<%= status %>" <%= actionItem && actionItem.status === status ? 'selected' : '' %>><%= status %></option>
            <% }) %>
        </select>
    </div>
    <div class="button-group">
        <button type="submit" class="button btn btn-primary">Save Changes</button>
        <button class="button btn-secondary navigate-button" data-url="/incidents/view/<%= actionItem.incidentId %>">View Incident</button>
        <button class="button btn-secondary" onclick="window.location.href='/action-items'">Go to Action Items</button>
    </div>    
</form>